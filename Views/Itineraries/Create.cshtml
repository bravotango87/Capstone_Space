@model Space.Models.Itinerary

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Itinerary</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div hidden class="form-group">
                <label asp-for="RequiredForms" class="control-label"></label>
                <input asp-for="RequiredForms" class="form-control" />
                <span asp-validation-for="RequiredForms" class="text-danger"></span>
            </div>

            <div class="form-group">

                <label>Choose Your Destination</label>

                <br>



                <select class="form-control" id="exampleSelect1">

                    <option>International Space Station</option>

                    <option>Moon</option>

                    <option>Mars</option>

                    <option>Low Earth Orbit</option>

                    <option>Stratosphere</option>



                </select>

            </div>


            <div hidden class="form-group">
                <label asp-for="WhatToBring" class="control-label"></label>
                <input asp-for="WhatToBring" class="form-control" />
                <span asp-validation-for="WhatToBring" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="Depature" class="control-label"></label>
                <select asp-for="Depature" class="form-control"></select>
                <span asp-validation-for="Depature" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ThreeWeeksPrior" class="control-label"></label>
                <input asp-for="ThreeWeeksPrior" class="form-control" />
                <span asp-validation-for="ThreeWeeksPrior" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DayOfLaunch" class="control-label"></label>
                <input asp-for="DayOfLaunch" class="form-control" />
                <span asp-validation-for="DayOfLaunch" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Arrival" class="control-label"></label>
                <input asp-for="Arrival" class="form-control" />
                <span asp-validation-for="Arrival" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WhatToDo" class="control-label"></label>
                <input asp-for="WhatToDo" class="form-control" />
                <span asp-validation-for="WhatToDo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlyingBack" class="control-label"></label>
                <input asp-for="FlyingBack" class="form-control" />
                <span asp-validation-for="FlyingBack" class="text-danger"></span>
            </div>
            <div hidden class="form-group">
                <label asp-for="IdentityUserId" class="control-label"></label>
                <select asp-for="IdentityUserId" class="form-control" asp-items="ViewBag.IdentityUserId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

